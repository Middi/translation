extends layout

block content
    .container
        .form#newform
            .row
                .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
                    form(action='/entry', method='POST')
                        .row
                            .col-xs-12.col-sm-6.col-md-6
                            .form-group
                                input.form-control.input-lg(type='text', name='trans[polish]', placeholder='Polish')
                        .row
                            .col-xs-12.col-sm-6.col-md-6
                            .form-group
                                input.form-control.input-lg(type='text', name='trans[english]', placeholder='English')
                        .row
                            .col-xs-12.col-sm-6.col-md-6
                            .form-group
                                input.form-control.input-lg(type='text', name='trans[phonetic]', placeholder='Phonetic')
                        .row
                            .col-xs-12.col-sm-6.col-md-6
                            .form-group
                                select.form-control.input-lg(type='text', name='trans[category]')
                                    option Numbers
                                    option Times
                                    option Days
                                    option Months
                                    option Colors
                                    option Pleasantries
                                    option Directions
                                    option Misc
                        .row
                            .col-xs-12.col-sm-6.col-md-6
                            .form-group
                                input.form-control.input-lg(type='text', name='trans[cat_id]', placeholder='Cat ID')
                                //- p= data
                        .row
                            .col-xs-12.col-md-6
                            input.btn.btn-red.btn-block.btn-lg(type='submit')
